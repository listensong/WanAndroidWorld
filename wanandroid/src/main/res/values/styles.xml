<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="WanTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/wanColorPrimary</item>
        <item name="colorPrimaryDark">@color/wanColorPrimaryDark</item>
        <item name="colorAccent">@color/wanColorAccent</item>
    </style>

    <style name="WanTheme.SplashMaskTheme" parent="BaseAppTheme.FullScreen">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@drawable/wan_splash_mask_page</item>
    </style>

    <style name="WanLauncherTheme" parent="WanTheme">
        <item name="android:windowBackground">@color/wanTranslucent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/NoneAnimation</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
